<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="#99FFB81A" android:endColor="#99ff4f33" android:angle="180" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="#99FFB81A" android:endColor="#99ff4f33" android:angle="180" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="#99FFB81A" android:endColor="#99ff4f33" android:angle="180" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="#FFB81A" android:endColor="#FF4F33" android:angle="180" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>