<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/white_solid_corners_shape">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:background="@drawable/white_color_item_selector_top_left_right_corners"
            android:text="@string/拍照"
            android:gravity="center"
            android:id="@+id/take_camera_textview"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:background="@drawable/white_color_item_selector_bottom_left_right_corners"
            android:text="@string/从相册中选择"
            android:gravity="center"
            android:id="@+id/choose_photo_textview"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:background="@drawable/white_color_item_selector_corners"
        android:text="@string/取消"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="19dp"
        android:id="@+id/modify_title_pop_cencel"
        />
</LinearLayout>