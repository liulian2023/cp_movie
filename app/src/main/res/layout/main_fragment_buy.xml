<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
        <LinearLayout
            android:id="@+id/shopping_action_bar_linear"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/action_bar_color"
            android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:contentDescription="TODO"
                            android:padding="4dp"
                            android:src="@drawable/goucaidatin" />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:contentDescription="TODO" android:padding="4dp"
                            />

                </LinearLayout>

                <TextView
                    android:id="@+id/goucai_center"
                    android:layout_width="244dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/购彩大厅"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/goucai_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp">
                        <ImageView
                            android:id="@+id/all_tottety"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/goucaidatin"
                            android:contentDescription="TODO" android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/goucaidatin"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:contentDescription="TODO" android:padding="4dp"
                           />

                </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/shopping_content">
        </FrameLayout>

</LinearLayout>