<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bigest_linear"
    >
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/today"
        android:layout_marginRight="10dp"
        android:text="@string/今日"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:button="@null"
        android:background="@drawable/rebate_table_popupwindow_selecte"
        android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
        android:textSize="14sp"
        />
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:text="@string/昨天"
        android:id="@+id/yestoday"
        android:layout_gravity="center"
        android:background="@drawable/rebate_table_popupwindow_selecte"
        android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
        android:paddingTop="8dp"
        android:button="@null"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:textSize="14sp"
        />
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:text="@string/本月"
        android:id="@+id/this_month"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:button="@null"
        android:background="@drawable/rebate_table_popupwindow_selecte"
        android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:textSize="14sp"
        />
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/上月"
        android:id="@+id/last_month"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:button="@null"
        android:background="@drawable/rebate_table_popupwindow_selecte"
        android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:textSize="14sp"
        />
</RadioGroup>

</LinearLayout>