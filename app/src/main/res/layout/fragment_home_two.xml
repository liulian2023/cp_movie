<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".uuuu.iuymn.mkjnb.Fragment.main_Tab_fragment.HomeTwoFragment">
    <RelativeLayout
        android:id="@+id/home_action_linear"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/home_tab"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            app:xTabSelectedTextColor="#FF2F81"
            app:xTabIndicatorColor="#FF2F81"
            app:xTabTextColor="#767676"
            app:xTabIndicatorWidth="20dp"
            android:background="@color/white"
            android:layout_alignParentLeft="true"
            app:xTabIndicatorHeight="4dp"
            />
<!--        app:xTabIndicatorFullWidth="false"-->

<!--        android:layout_marginRight="80dp"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="19dp"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:id="@+id/home_on_line_kf_iv"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="5dp"
                android:src="@drawable/home_top_kf"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/rank_iv"
                android:layout_width="41dp"
                android:layout_height="29dp"
                android:padding="5dp"
                android:src="@drawable/bhb_icon"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </RelativeLayout>
<!--    <com.cambodia.zhanbang.xunbo.myView.NoSlidingViewPager
        android:id="@+id/home_fragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>  -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/home_fragment_viewpager"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
