<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/game_rule_wrap_shape">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/跟投确认"
            android:textColor="@color/alpha_80_black"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:id="@+id/type_name"
                android:textColor="@color/alpha_80_black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/qishu"
                android:textColor="@color/alpha_80_black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/投注内容冒号"
                android:textColor="@color/alpha_80_black"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/touzhuneirong"
                android:textColor="@color/alpha_80_black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/alpha_80_black"
                android:text="@string/每注"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/bet_amount_edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:hint="@string/请输入金额"
                android:inputType="number"
                android:padding="5dp"
                android:maxLength="9"
                android:textColor="@color/alpha_80_black"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/alpha_80_black"
                android:text="@string/共"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#ed9e2e"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/bet_num"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/注"
                android:textColor="@color/alpha_80_black"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="3dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/bet_amount"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/元"
                android:textColor="@color/alpha_80_black"
                android:gravity="center"
                />
        </LinearLayout>
        <include layout="@layout/split_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/取消"
                    android:gravity="center"
                    android:id="@+id/bet_cancel"
                    android:textColor="@color/alpha_80_black"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/pop_cancel_selector"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                   android:background="@color/split"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/确定"
                    android:textColor="#63a4e8"
                    android:gravity="center"
                    android:id="@+id/bet_sure"
                    android:background="@drawable/pop_sure_selector"
                    />
            </LinearLayout>
        <!--</LinearLayout>-->
    </LinearLayout>
</RelativeLayout>