<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/today"
            android:text="@string/今天"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/rebate_table_popupwindow_selecte"
            android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
            android:textSize="14sp"
            android:layout_marginRight="4dp"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/昨天"
            android:id="@+id/yestoday"
            android:layout_gravity="center"
            android:background="@drawable/rebate_table_popupwindow_selecte"
            android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
            android:paddingTop="8dp"
            android:button="@null"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/七天"
            android:id="@+id/seven"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:button="@null"
            android:background="@drawable/rebate_table_popupwindow_selecte"
            android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="4dp"
            />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/split"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/all_in"
            android:text="@string/全部类型"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/rebate_table_popupwindow_selecte"
            android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
            android:textSize="14sp"
            android:layout_marginRight="4dp"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/充值中"
            android:id="@+id/ing_in"
            android:layout_gravity="center"
            android:background="@drawable/rebate_table_popupwindow_selecte"
            android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
            android:paddingTop="8dp"
            android:button="@null"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/充值成功"
            android:id="@+id/succese_in"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:button="@null"
            android:background="@drawable/rebate_table_popupwindow_selecte"
            android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/充值失败"
            android:id="@+id/lose_in"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/rebate_table_popupwindow_selecte"
            android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
            android:textSize="14sp"
            android:layout_marginRight="4dp"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/充值失败"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:background="@drawable/rebate_table_popupwindow_selecte"
            android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
            android:paddingTop="8dp"
            android:button="@null"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/申请中"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:button="@null"
            android:background="@drawable/rebate_table_popupwindow_selecte"
            android:textColor="@color/bet_choose_pklay_type_textcolor_selector"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <Button
            android:id="@+id/choose_button_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/login_button_shape"
            android:text="@string/筛选"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>