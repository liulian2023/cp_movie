<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/circle_iv"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zi" />

    <TextView
        android:id="@+id/game_rule_type_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textColor="@color/default_color"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_iv"
        app:layout_constraintStart_toEndOf="@+id/circle_iv"
        app:layout_constraintTop_toTopOf="@+id/circle_iv" />

    <TextView
        android:id="@+id/xiadan_jine_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/下单金额"
        android:textSize="12sp"
        android:textColor="#999999"
        app:layout_constraintStart_toStartOf="@+id/game_rule_type_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/game_rule_type_name_tv" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/净输赢"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/xiadan_jine_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/xiadan_jine_tv" />

    <TextView
        android:id="@+id/bet_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="1200"
        android:textColor="@color/default_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/xiadan_jine_tv"
        app:layout_constraintStart_toStartOf="@+id/xiadan_jine_tv"
        app:layout_constraintTop_toBottomOf="@+id/xiadan_jine_tv" />

    <TextView
        android:id="@+id/winning_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-95"
        android:textColor="@color/default_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/bet_amount_tv"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="@+id/bet_amount_tv" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="0dp"
        android:layout_height="0.6dp"
        android:background="#D8D8D8"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/circle_iv"
        app:layout_constraintTop_toBottomOf="@+id/winning_amount_tv"
        android:layout_marginTop="11dp" />

    <ImageView
        android:id="@+id/game_note_more_iv"
        android:layout_width="28dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toTopOf="@+id/textView23"
        app:layout_constraintEnd_toEndOf="@+id/textView23"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:srcCompat="@drawable/yxbb_xyy_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>