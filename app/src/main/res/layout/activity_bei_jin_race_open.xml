<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".uuuu.iuymn.mkjnb.activity.rightMenuActivity.openingResultActivity.RaceOpenActivity">
    <include layout="@layout/open_result_action_bar"/>
    <include layout="@layout/split_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/期数"
            android:gravity="center"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/open_result_qishu_shape"
            />
      <TextView
         android:layout_width="1dp"
         android:layout_height="match_parent"
          android:background="@drawable/open_result_split_shape"
          />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@drawable/open_result_qishu_shape"
            >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:layout_gravity="center"
          >
          <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:button="@null"
              android:text="@string/号码"
              android:id="@+id/radio_button_one"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:textColor="@color/white"
              android:background="@drawable/open_result_selector"
              />
          <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:button="@null"
              android:text="@string/大小"
              android:id="@+id/radio_button_two"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:background="@drawable/open_result_selector"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:layout_marginLeft="8dp"
              android:textColor="@color/white"

              />
          <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:button="@null"
              android:text="@string/单双"
              android:id="@+id/radio_button_three"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:layout_marginLeft="8dp"
              android:textColor="@color/white"
              android:background="@drawable/open_result_selector"
              />
          <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:button="@null"
              android:text="@string/亚冠龙虎"
              android:id="@+id/radio_button_four"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:layout_marginLeft="8dp"
              android:textColor="@color/white"
              android:background="@drawable/open_result_selector"
              />
      </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/split_horizontal"/>
    <include layout="@layout/nodata_layout"/>
    <include layout="@layout/loading_layout"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/refresh"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/beijin_open_recycle"
            ></androidx.recyclerview.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>