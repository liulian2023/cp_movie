<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <ImageView
        android:id="@+id/iv_lotterylist_recyitem_name"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_lotterylist_recyitem_xian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xian"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@+id/iv_lotterylist_recyitem_name"
        app:layout_constraintTop_toTopOf="@+id/iv_lotterylist_recyitem_name" />

    <TextView
        android:id="@+id/tv_lotterylist_recyitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/时时彩"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/iv_lotterylist_recyitem_name"
        app:layout_constraintRight_toRightOf="@+id/iv_lotterylist_recyitem_name"
        app:layout_constraintTop_toBottomOf="@+id/iv_lotterylist_recyitem_name" />

    <LinearLayout
        android:id="@+id/ll_lotterylist_recyitem_islive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_lotterylist_recyitem_name"
        app:layout_constraintRight_toRightOf="@+id/iv_lotterylist_recyitem_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_lotterylist_recyitem_name">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_live_status"
            app:layout_constraintLeft_toLeftOf="@+id/iv_lotterylist_recyitem_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/直播中"
            android:textColor="#FF2D60"
            android:textSize="12sp" />

    </LinearLayout>

