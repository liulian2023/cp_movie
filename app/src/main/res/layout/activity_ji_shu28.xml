<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/bet_parent"
    tools:context=".uuuu.iuymn.mkjnb.activity.caizhong.pcDanDan.PcDanDanBetActivity">
    <LinearLayout
        android:id="@+id/bet_wrap_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical">
        <include layout="@layout/bet_actionbar"/>
        <include layout="@layout/no_network_layout"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:id="@+id/now_qishu"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:id="@+id/time_linear"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="00"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        android:id="@+id/hour"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text=":"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="00"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        android:id="@+id/minutes"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text=":"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="00"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        android:id="@+id/seconds"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/time_load_linear"
                    android:gravity="center"
                    >

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/loading"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/is_stop_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:text="@string/暂停销售"
                    android:textColor="@color/red"
                    android:gravity="center"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:id="@+id/today_open_result"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/期开奖号码"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:id="@+id/last_qishu"
                        android:layout_marginRight="3dp"
                        />
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:contentDescription="TODO" android:src="@mipmap/icon_arrow_down"
                        android:layout_gravity="center"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:id="@+id/open_resule_linear"
                    >
                    <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="0"
                        android:gravity="center"
                        android:id="@+id/num_one"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="+"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />
                    <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="0"
                        android:gravity="center"
                        android:id="@+id/num_two"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="+"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />
                    <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="0"
                        android:gravity="center"
                        android:id="@+id/num_three"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="="
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />
                    <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="0"
                        android:gravity="center"
                        android:id="@+id/num_hezhi"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/split_horizontal"/>
        <include layout="@layout/loading_layout"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bet_recycle_wrap_shape"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/play_type_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bet_play_type_shape"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/混合"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pcdandan_bet_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/已选中"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                />
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/yellow"
                android:text="11"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:id="@+id/bet_num"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/注"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/amount_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bet_edittext_shape"
                    android:hint="@string/请输入金额"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp" android:baselineAligned="false"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bet_bet_button_shape"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/下注"
                        android:textColor="@color/white"
                        android:id="@+id/bet_button"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bet_edittext_shape"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/机选"
                        android:id="@+id/random_button"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/stop_textview"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/已封盘"
        android:textColor="@color/white"
        android:background="@color/black_50"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/bet_wrap_linear"
        app:layout_constraintRight_toRightOf="@+id/bet_wrap_linear"
        app:layout_constraintBottom_toBottomOf="@+id/bet_wrap_linear"
        />


</androidx.constraintlayout.widget.ConstraintLayout>