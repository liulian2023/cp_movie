<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/send_red_root"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/game_rule_wrap_shape">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/发红包"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/总金额"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/send_price"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:hint="0.00"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/红包个数"
                android:textSize="14sp"
                />

            <EditText
                android:id="@+id/send_num"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:hint="@string/填写个数"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/留言"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                />
            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="@string/恭喜发财大吉大利"
                android:background="@null"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:inputType="" android:padding="5dp"
                android:id="@+id/send_content"
                />
        </LinearLayout>
        <include layout="@layout/split_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/取消"
                    android:gravity="center"
                    android:id="@+id/send_cancel"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/pop_cancel_selector"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                   android:background="@color/split"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/确定"
                    android:textColor="#63a4e8"
                    android:gravity="center"
                    android:id="@+id/send_sure"
                    android:background="@drawable/pop_sure_selector"
                    />
            </LinearLayout>
        <!--</LinearLayout>-->
    </LinearLayout>
</RelativeLayout>