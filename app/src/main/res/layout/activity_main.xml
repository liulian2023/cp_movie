<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uuuu.iuymn.mkjnb.activity.MainActivity"
   >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <!--<LinearLayout-->
           <!--android:layout_width="match_parent"-->
           <!--android:layout_height="wrap_content"-->
           <!--android:orientation="vertical">-->
           <!--<include-->
               <!--android:id="@+id/include"-->
               <!--layout="@layout/action_bar" />-->
       <!--</LinearLayout>-->
   <include layout="@layout/no_network_layout"/>
       <FrameLayout
           android:id="@+id/fragment_content"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1">
       </FrameLayout>
        <include layout="@layout/split_horizontal"/>
       <LinearLayout
           android:id="@+id/linearLayout_tab"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:background="@color/white"
           android:baselineAligned="false"
           android:orientation="horizontal">
           <LinearLayout
               android:id="@+id/tab_home"
               android:layout_width="0dp"
               android:layout_height="38dp"
               android:layout_marginBottom="5dp"
               android:layout_marginTop="5dp"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">
               <ImageView
                   android:id="@+id/home_tab__img"
                   android:layout_width="38dp"
                   android:layout_height="38dp"
                   android:contentDescription="TODO"
                   android:src="@drawable/shouye_dl"
                   android:layout_gravity="center"
                   />

               <TextView
                   android:id="@+id/home_tab_tv"
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:layout_marginBottom="3dp"
                   android:gravity="center"
                   android:text="@string/首页"
                   android:textSize="12sp" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/tab_home_two"
               android:layout_width="0dp"
               android:layout_height="38dp"
               android:layout_marginBottom="5dp"
               android:layout_marginTop="5dp"
               android:layout_weight="1"

               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:id="@+id/home_tab__img_two"
                   android:layout_width="38dp"
                   android:layout_height="38dp"
                   android:contentDescription="TODO"
                   android:layout_gravity="center"
                   android:src="@drawable/shouye_wdl" />

               <TextView
                   android:id="@+id/home_tab__tv_two"
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:layout_marginBottom="3dp"
                   android:gravity="center"
                   android:text="@string/首页"
                   android:textSize="12sp" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/tab_buy"
               android:layout_width="0dp"
               android:layout_height="38dp"
               android:layout_marginBottom="5dp"
               android:layout_marginTop="5dp"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:id="@+id/tab_buy_img"
                   android:layout_width="38dp"
                   android:layout_height="38dp"
                   android:src="@drawable/zhibo_wdl"
                   />

               <TextView
                   android:id="@+id/tab_buy_tv"
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:layout_marginBottom="3dp"
                   android:gravity="center"
                   android:text="@string/直播"
                   android:textSize="12sp" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/tab_aty"
               android:layout_width="0dp"
               android:layout_height="38dp"
               android:layout_marginBottom="5dp"
               android:layout_marginTop="5dp"

               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:id="@+id/tab_aty_img"
                   android:layout_width="38dp"
                   android:layout_height="38dp"
                   android:contentDescription="TODO"
                   android:layout_gravity="center"
                   android:src="@drawable/youxi_wdl" />

               <TextView
                   android:id="@+id/tab_aty_tv"
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:layout_marginBottom="3dp"

                   android:gravity="center"
                   android:text="@string/游戏"
                   android:textSize="12sp" />

           </LinearLayout>
           <LinearLayout
               android:id="@+id/tab_mine"
               android:layout_width="0dp"
               android:layout_height="38dp"
               android:layout_marginBottom="5dp"
               android:layout_marginTop="5dp"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">

               <ImageView
                   android:id="@+id/tab_mine_img"
                   android:layout_width="38dp"
                   android:layout_height="38dp"
                   android:layout_gravity="center"
                   android:contentDescription="TODO"
                   android:src="@drawable/wode_wdl" />

               <TextView
                   android:id="@+id/tab_mine_tv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="2dp"
                   android:layout_marginBottom="3dp"
                   android:gravity="center"
                   android:visibility="gone"
                   android:text="@string/我的"
                   android:textSize="12sp" />
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>