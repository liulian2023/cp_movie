<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <ImageView
           android:layout_width="12dp"
           android:layout_height="12dp"
           android:contentDescription="TODO" android:src="@drawable/official_icon"
           android:layout_gravity="center"
           android:layout_marginLeft="12dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="@string/直选"
           android:minWidth="40dp"
           android:layout_gravity="center"
           android:layout_marginLeft="5dp"
           android:id="@+id/ssc_official_item_two_textview"
           />

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent" android:focusable="true" 
           android:layout_height="wrap_content"
           android:layout_marginLeft="12dp"
           android:id="@+id/official_choose_three_recycle"
           android:clickable="true"
           ></androidx.recyclerview.widget.RecyclerView>
   </LinearLayout>


</LinearLayout>