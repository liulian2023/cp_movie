<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false" android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/top_corners_shapre">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="TODO" android:src="@drawable/no2"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            />
                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="-15dp"
                            android:background="@drawable/yestoday_rank_no2_linear">
                            <ImageView
                                android:layout_width="50dp" android:contentDescription="TODO" 
                                android:layout_height="50dp"
                                android:id="@+id/no2_img"
                                />

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text=""
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:id="@+id/no2_name"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text=""
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/red80"
                            android:layout_marginBottom="12dp"
                            android:id="@+id/no2_amount"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:background="@drawable/top_corners_shapre"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="TODO" android:src="@drawable/no1"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            />
                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="-15dp"
                            android:background="@drawable/yestoday_rank_no1_linear">
                            <ImageView
                                android:layout_width="50dp" android:contentDescription="TODO" 
                                android:layout_height="50dp"
                                android:id="@+id/no1_img"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text=""
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:id="@+id/no1_name"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text=""
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/red80"
                            android:layout_marginBottom="12dp"
                            android:id="@+id/no1_acmount"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/top_corners_shapre"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="TODO" android:src="@drawable/no3"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            />
                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="-15dp"
                            android:background="@drawable/yestoday_rank_no3_linear">
                            <ImageView
                                android:layout_width="50dp" android:contentDescription="TODO" 
                                android:layout_height="50dp"
                                android:id="@+id/no3_img"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text=""
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:id="@+id/no3_name"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text=""
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/red80"
                            android:layout_marginBottom="12dp"
                            android:id="@+id/no3_amount"

                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#F9C0AC"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/排名"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/昵称"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/总收益"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/white"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
