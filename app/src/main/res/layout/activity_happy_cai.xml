                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/fail_refresh_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="@string/点击刷新"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/default_color"
                android:visibility="gone"
                />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/count_down_fail_loading_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/loading"
                android:layout_gravity="center"
                android:visibility="gone"
                />
        </FrameLayout>

        <include layout="@layout/split_horizontal"/>
        <include layout="@layout/loading_layout"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bet_recycle_wrap_shape"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/happy_bet_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/已选中"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                />
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/yellow"
                android:text="0"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:id="@+id/bet_num"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/注"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/amount_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bet_edittext_shape"
                    android:hint="@string/请输入金额"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp" android:baselineAligned="false"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/bet_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bet_bet_button_shape"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:text="@string/下注"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bet_edittext_shape"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/机选"
                        android:id="@+id/random_button"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/stop_textview"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/已封盘"
        android:textColor="@color/white"
        android:background="@color/black_50"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/bet_wrap_linear"
        app:layout_constraintRight_toRightOf="@+id/bet_wrap_linear"
        app:layout_constraintBottom_toBottomOf="@+id/bet_wrap_linear"
        />
</androidx.constraintlayout.widget.ConstraintLayout>