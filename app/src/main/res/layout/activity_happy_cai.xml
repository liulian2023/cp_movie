                                android:text="-"
                                android:gravity="center"
                                android:id="@+id/bj_num_20"
                                android:textColor="@color/white"
                                android:textSize="@dimen/bet_ball_size"
                                android:layout_marginLeft="@dimen/bet_ball_margin"
                                />
