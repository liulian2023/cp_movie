                                android:id="@+id/bj_num_ten"
                                android:textColor="@color/white"
                                android:textSize="@dimen/bet_ball_size"
                                android:layout_marginLeft="@dimen/bet_ball_margin"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            >
                            <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="-"
                                android:gravity="center"
                                android:id="@+id/bj_num_11"
                                android:textSize="@dimen/bet_ball_size"
                                android:textColor="@color/white"
                                />
                            <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="-"
                                android:gravity="center"
                                android:id="@+id/bj_num_12"
                                android:textColor="@color/white"
                                android:textSize="@dimen/bet_ball_size"
                                android:layout_marginLeft="@dimen/bet_ball_margin"
                                />
                            <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="-"
                                android:gravity="center"
                                android:id="@+id/bj_num_13"
                                android:textColor="@color/white"
                                android:textSize="@dimen/bet_ball_size"
                                android:layout_marginLeft="@dimen/bet_ball_margin"
                                />
                            <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="-"
                                android:gravity="center"
                                android:id="@+id/bj_num_14"
                                android:textColor="@color/white"
                                android:textSize="@dimen/bet_ball_size"
                                android:layout_marginLeft="@dimen/bet_ball_margin"
                                />
                            <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
