<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/save_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_8radio_rapple"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/black_close" />
        <ImageView
            android:id="@+id/qr_code_iv"
            android:layout_width="0dp"
            android:layout_height="218dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="12dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close_iv"
            />

        <ImageView
            android:id="@+id/cover_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/qr_code_iv"
            app:layout_constraintTop_toBottomOf="@+id/qr_code_iv" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launch_1"
            app:layout_constraintBottom_toBottomOf="@+id/qr_code_iv"
            app:layout_constraintEnd_toEndOf="@+id/qr_code_iv"
            app:layout_constraintStart_toStartOf="@+id/qr_code_iv"
            app:layout_constraintTop_toTopOf="@+id/qr_code_iv" />
        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/邀请码"
            android:textColor="@color/default_color"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/cover_iv"
            app:layout_constraintTop_toTopOf="@+id/cover_iv" />

        <TextView
            android:id="@+id/invite_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="- - - - "
            android:textColor="@color/default_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView31"
            app:layout_constraintStart_toEndOf="@+id/textView31"
            app:layout_constraintTop_toTopOf="@+id/textView31"

            />

        <ImageView
            android:id="@+id/change_code_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView31"
            app:layout_constraintEnd_toEndOf="@+id/qr_code_iv"
            app:layout_constraintTop_toTopOf="@+id/cover_iv"
            app:srcCompat="@drawable/change_code_icon" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/若扫码无法打开请在浏览器输入以下网址"
            android:textColor="@color/default_color"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/change_code_iv"
            app:layout_constraintStart_toStartOf="@+id/textView31"
            app:layout_constraintTop_toBottomOf="@+id/textView31" />

        <TextView
            android:id="@+id/download_url_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="- - - "
            android:textColor="#F84848"
            android:textSize="12sp"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="@+id/cover_iv"
            app:layout_constraintEnd_toEndOf="@+id/textView35"
            app:layout_constraintStart_toStartOf="@+id/textView31" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/save_qr_code_btn"
        android:layout_width="170dp"
        android:layout_height="44dp"
        android:layout_marginTop="23dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/保存"
        android:background="@drawable/login_btn_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_constraintLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>