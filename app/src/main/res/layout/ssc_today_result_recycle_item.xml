<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:baselineAligned="false" android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1923562"
                android:textSize="12sp"
                android:id="@+id/qishu"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1923562"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:id="@+id/time"
                />
        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:gravity="center"
                >
                    <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="10"
                        android:gravity="center"
                        android:id="@+id/ssc_num_one"
                        android:textColor="@color/white"
                        android:textSize="@dimen/bet_ball_size"
                        />
                    <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="10"
                        android:gravity="center"
                        android:id="@+id/ssc_num_two"
                        android:textColor="@color/white"
                        android:textSize="@dimen/bet_ball_size"
                        android:layout_marginLeft="@dimen/bet_ball_margin"
                        />
                    <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="10"
                        android:gravity="center"
                        android:id="@+id/ssc_num_three"
                        android:textColor="@color/white"
                        android:textSize="@dimen/bet_ball_size"
                        android:layout_marginLeft="@dimen/bet_ball_margin"
                        />
                    <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="10"
                        android:gravity="center"
                        android:id="@+id/ssc_num_four"
                        android:textColor="@color/white"
                        android:textSize="@dimen/bet_ball_size"
                        android:layout_marginLeft="@dimen/bet_ball_margin"
                        />
                    <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="10"
                        android:gravity="center"
                        android:id="@+id/ssc_num_five"
                        android:textColor="@color/white"
                        android:textSize="@dimen/bet_ball_size"
                        android:layout_marginLeft="@dimen/bet_ball_margin"
                        />
            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="12"
                android:textColor="#f66f2b"
                android:textSize="12sp"
                android:id="@+id/hezhi_one"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12"
                android:textColor="#f66f2b"
                android:layout_weight="1"
                android:textSize="12sp"
                android:id="@+id/hezhi_two"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12"
                android:textColor="#f66f2b"
                android:layout_weight="1"
                android:textSize="12sp"
                android:id="@+id/hezhi_three"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12"
                android:textColor="#f66f2b"
                android:layout_weight="1"
                android:textSize="12sp"
                android:id="@+id/hezhi_four"
                />
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/split_horizontal"/>
