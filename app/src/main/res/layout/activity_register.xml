<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_wrap_constrainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".uuuu.iuymn.mkjnb.activity.main_tab_activity.RegisterActivity">
    <include
        android:id="@+id/register_toolbar"
        layout="@layout/toolbar_layout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_toolbar" />


    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="38dp"
        android:text="@string/邀请码"
        android:textColor="@color/default_color"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/invite_code_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="37dp"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="@string/请输入邀请码38位数字"
        android:singleLine="true"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:theme="@style/LoginEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:id="@+id/invite_code_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/邀请码错误"
        android:textColor="#FF4659"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/invite_code_etv"
        app:layout_constraintTop_toBottomOf="@+id/invite_code_etv" />
    <TextView
        android:id="@+id/account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="38dp"
        android:text="@string/设置账号"
        android:visibility="gone"
        android:textColor="@color/default_color"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_code_etv" />

    <EditText
        android:id="@+id/register_account_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="37dp"
        android:hint="@string/请设置账号611字母和数字的组合"
        android:singleLine="true"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:theme="@style/LoginEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/invite_code_etv"
        app:layout_constraintTop_toBottomOf="@+id/account_tv" />

    <EditText
        android:id="@+id/register_phone_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="37dp"
        android:hint="@string/请输入手机号"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:theme="@style/LoginEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/invite_code_etv"
        app:layout_constraintTop_toBottomOf="@+id/account_tv" />

    <TextView
        android:id="@+id/account_presence_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/该账号已被注册请重新输入"
        android:textColor="#FF4659"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/register_account_etv"
        app:layout_constraintTop_toBottomOf="@+id/register_account_etv" />

    <ImageView
        android:id="@+id/account_success_tip_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/register_account_etv"
        app:layout_constraintEnd_toEndOf="@+id/register_account_etv"
        app:layout_constraintTop_toTopOf="@+id/register_account_etv"
        app:srcCompat="@drawable/zccg"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="38dp"
        android:text="@string/设置密码"
        android:visibility="gone"
        android:textColor="@color/default_color"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_account_etv" />

    <EditText
        android:id="@+id/register_password_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="37dp"
        android:hint="@string/请设置密码位字母和数字的组合"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:theme="@style/LoginEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/invite_code_etv"
        app:layout_constraintTop_toBottomOf="@+id/password_tv" />

    <TextView
        android:id="@+id/sure_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="38dp"
        android:text="@string/确认密码"
        android:visibility="gone"
        android:textColor="@color/default_color"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password_etv" />

    <EditText
        android:id="@+id/register_sure_password_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="37dp"
        android:hint="@string/请再次输入密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:theme="@style/LoginEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/invite_code_etv"
        app:layout_constraintTop_toBottomOf="@+id/sure_password_tv" />

    <EditText
        android:id="@+id/phone_code_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:hint="@string/请输入短信验证码"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="16"
        android:singleLine="true"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:theme="@style/LoginEditText"
        app:layout_constraintEnd_toEndOf="@+id/register_sure_password_etv"
        app:layout_constraintStart_toStartOf="@+id/register_sure_password_etv"
        app:layout_constraintTop_toBottomOf="@+id/register_sure_password_etv" />

    <TextView
        android:id="@+id/phone_textView34"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_marginEnd="4dp"
        android:background="#D8D8D8"
        app:layout_constraintBottom_toBottomOf="@+id/phone_code_etv"
        app:layout_constraintEnd_toStartOf="@+id/get_phone_code_tv"
        app:layout_constraintTop_toTopOf="@+id/phone_code_etv" />

    <TextView
        android:id="@+id/get_phone_code_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:text="@string/获取验证码"
        android:gravity="center"
        android:textColor="#048CF7"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/phone_code_etv"
        app:layout_constraintEnd_toEndOf="@+id/phone_code_etv"
        app:layout_constraintTop_toTopOf="@+id/phone_code_etv" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/phone_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="get_phone_code_tv,phone_textView34,phone_code_etv" />

    <Button
        android:id="@+id/register_next_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_btn_shape"
        android:text="@string/立即注册"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/register_sure_password_etv"
        app:layout_constraintStart_toStartOf="@+id/register_sure_password_etv"
        app:layout_constraintTop_toBottomOf="@+id/phone_code_etv" />

    <TextView
        android:id="@+id/register_version_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/版本号"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_next_btn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/登录注册遇到问题"
            android:textColor="@color/default_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/kefu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/联系客服"
            android:textColor="#048CF7"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>