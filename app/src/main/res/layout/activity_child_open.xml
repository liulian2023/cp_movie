<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".uuuu.iuymn.mkjnb.activity.AgentCenter.ChildOpenActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/action_bar_color"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/child_open_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/返回"
        android:layout_gravity="center"
        android:textColor="@color/action_bar_return_textcolor_selecter"
        android:textSize="16sp"
       />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        >

        <RadioButton
            android:id="@+id/child_open"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:textSize="16sp"
            android:background="@drawable/user_info_selecter"
            android:text="@string/下级开户"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@drawable/user_info_text_color"
            />

        <RadioButton
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/invite_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:background="@drawable/user_info_selecter2"
            android:textSize="16sp"
            android:textColor="@drawable/user_info_text_color"
            android:text="@string/邀请码activity_child_open" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="12dp"
        android:text="@string/返回"
        android:gravity="center"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="16sp"
        />
</LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/child_open_content"
        ></FrameLayout>
</LinearLayout>