<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uuuu.iuymn.mkjnb.activity.caizhong.RaceActivity">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/caizhong_head1" />

        <LinearLayout
            android:id="@+id/race_tab_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fragment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <include layout="@layout/caizhong_head2" />

                        <include layout="@layout/race_head3" />

                        <include layout="@layout/loading_layout" />

                        <LinearLayout
                            android:id="@+id/ll_xy_race_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/xy_race_recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_gf_race_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/gf_race_recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>

            <include layout="@layout/layout_bottom_touzhu" />

            <include layout="@layout/layout_touzhu_gf" />

        </LinearLayout>

        <include  layout="@layout/layout_reload" />


    </LinearLayout>
    <TextView
        android:id="@+id/fenpan_tv"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/已封盘"
        android:textColor="@color/white"
        android:background="@color/black_50"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout11"
        app:layout_constraintRight_toRightOf="@+id/linearLayout11"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout11"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
