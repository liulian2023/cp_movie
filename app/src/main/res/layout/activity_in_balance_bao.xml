<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".uuuu.iuymn.mkjnb.activity.yueBao_activity.InYueBaoActivity">
    <include layout="@layout/action_bar_two"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/转入金额元"
            android:textColor="@color/default_color"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="24sp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/default_color"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/可转入余额0.00元"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:id="@+id/amount_edit"
                android:inputType="number|numberDecimal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="12dp"
                android:text="@string/全部"
                android:textColor="#e53333"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:id="@+id/all_amount"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/zhuanru_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/game_rule_sure_shape"
        android:text="@string/确认转入"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

        <TextView
            android:id="@+id/span_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            />
</LinearLayout>