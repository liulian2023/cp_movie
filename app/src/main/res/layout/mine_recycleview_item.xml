<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycle_item_selector"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:orientation="horizontal"
    android:id="@+id/mine_item_linear">
    <!--android:background="@drawable/mine_fragment_item_click_selector"-->
    <ImageView
        android:id="@+id/mine_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:contentDescription="TODO" android:src="@drawable/wy_dzp"/>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/mine_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/个人信息"
        android:textSize="@dimen/size_14_tab"
        android:layout_marginLeft="8dp"/>
    <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyTextView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:id="@+id/un_read_tip_tv"
        android:layout_marginRight="5dp"
        />
    <ImageView
        android:id="@+id/mine_right"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:contentDescription="TODO" android:src="@drawable/right_hot"/>
</LinearLayout>
   <include layout="@layout/split_horizontal"/>

</LinearLayout>