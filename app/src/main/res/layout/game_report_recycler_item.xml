<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/report_item_constraintLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/report_title_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/report_typename_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/彩票游戏"
        android:textColor="@color/default_color"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/report_title_iv"
        app:layout_constraintStart_toEndOf="@+id/report_title_iv"
        app:layout_constraintTop_toTopOf="@+id/report_title_iv" />

    <ImageView
        android:id="@+id/report_more_iv"
        android:layout_width="28dp"
        android:layout_height="22dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/report_title_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/report_title_iv"
        app:srcCompat="@drawable/yxbb_xyy_btn" />

    <TextView
        android:id="@+id/xiazhu_zhuliang_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/下注注量"
        android:textSize="12sp"
        android:textColor="#999999"
        app:layout_constraintStart_toStartOf="@+id/report_title_iv"
        app:layout_constraintTop_toBottomOf="@+id/report_title_iv" />

    <TextView
        android:id="@+id/zhongjiang_jine_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/净输赢"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/xiazhu_zhuliang_tv"
        app:layout_constraintEnd_toEndOf="@+id/report_more_iv"
        app:layout_constraintTop_toTopOf="@+id/xiazhu_zhuliang_tv" />
    <TextView
        android:id="@+id/xiadan_jine_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/下注金额"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/xiazhu_zhuliang_tv"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/xiazhu_zhuliang_tv" />

    <TextView
        android:id="@+id/bet_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textSize="13sp"
        android:textColor="@color/default_color"
        app:layout_constraintEnd_toEndOf="@+id/xiazhu_zhuliang_tv"
        app:layout_constraintStart_toStartOf="@+id/xiazhu_zhuliang_tv"
        app:layout_constraintTop_toBottomOf="@+id/xiazhu_zhuliang_tv" />

    <TextView
        android:id="@+id/bet_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textSize="13sp"
        android:textColor="@color/default_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xiadan_jine_tv"
        />
    <TextView
        android:id="@+id/winnig_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textSize="13sp"
        android:textColor="#F75240"
        app:layout_constraintEnd_toEndOf="@+id/zhongjiang_jine_tv"
        app:layout_constraintStart_toStartOf="@+id/zhongjiang_jine_tv"
        app:layout_constraintTop_toBottomOf="@+id/zhongjiang_jine_tv" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0.6dp"
        android:layout_marginTop="12dp"
        android:background="#D8D8D8"
        app:layout_constraintEnd_toEndOf="@+id/report_more_iv"
        app:layout_constraintStart_toStartOf="@+id/xiazhu_zhuliang_tv"
        app:layout_constraintTop_toBottomOf="@+id/bet_amount_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>