<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/feedback_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/login_button_can_click_shape"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/mine_feedback_content_linear_shape">
        <TextView
            android:id="@+id/feedback_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:textSize="14sp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/feedback_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginRight="13dp"
            />
        <TextView
            android:id="@+id/gf_Reply_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="13dp"
            android:textSize="14sp"
            android:textColor="#999999"
            android:text=""
            android:layout_marginRight="13dp"
            />
    </LinearLayout>
</LinearLayout>