<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/winner_img"
        android:layout_width="30dp" android:contentDescription="TODO" 
        android:layout_height="30dp"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/winner_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
       android:gravity="center_vertical"
        android:textSize="12sp"
        android:text="212***44"
        />
    <TextView
        android:id="@+id/winner_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
      />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/zhongjiang_text"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    >
    <ImageView
        android:contentDescription="TODO" android:padding="3dp"
        android:id="@+id/winner_type"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/winner_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:textSize="12sp"
        android:textColor="@color/alpha_80_black"
     />
</LinearLayout>

</LinearLayout>