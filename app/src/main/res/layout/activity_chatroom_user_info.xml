<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".uuuu.iuymn.mkjnb.activity.chatRoomActivity.ChatroomUserInfoActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/lose_user_id_linear">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="TODO" android:src="@drawable/nodata"
                    android:layout_gravity="center"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/action_bar_color"
            android:layout_height="45dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/chatroom_return"
                    android:layout_gravity="center"
                    android:contentDescription="TODO" android:paddingRight="12dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/action_bar_left_img"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/chatroom_right"
                    android:contentDescription="TODO" android:paddingLeft="16dp"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/action_bar_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                </LinearLayout>

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/chatroom_return"
                    android:layout_gravity="center"
                    android:contentDescription="TODO" android:paddingLeft="12dp"
                    android:layout_marginRight="24dp"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/chatroom_right"
                    android:layout_gravity="center"
                    android:contentDescription="TODO" android:paddingRight="12dp"
                    android:id="@+id/action_bar_right_img"
                    android:visibility="invisible"
                    />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:gravity="center|bottom"
            android:background="@drawable/img_bg01">
                <ImageView
                    android:layout_width="76dp" android:contentDescription="TODO" 
                    android:layout_height="76dp"
                    android:id="@+id/mine_touxiang"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/账号冒号"
                    android:textColor="@color/alpha_80_black"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/nickname"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/性别冒号"
                    android:textColor="@color/alpha_80_black"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:id="@+id/sex"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/头衔"
                            android:gravity="center"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/中奖金额"
                            android:gravity="center"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/会员等级"
                            android:gravity="center"
                            android:textSize="12sp"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/alpha_80_black"
                            android:id="@+id/touxian"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text=""
                            android:gravity="center"
                            android:textColor="@color/alpha_80_black"
                            android:textSize="16sp"
                            android:id="@+id/amount"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/alpha_80_black"
                            android:id="@+id/dengji"

                            />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/img_bg"
            android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/他喜欢的彩票"
                    android:textColor="@color/alpha_80_black"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="16sp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/chatroom_userinfo_recycle"
                    ></androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/no_data_linear">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:contentDescription="TODO"
                            android:src="@drawable/nodata"
                            android:layout_gravity="center" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@string/暂无数据"
                            android:gravity="center"
                            />
                </LinearLayout>
                <include layout="@layout/loading_layout"/>

        </LinearLayout>

</LinearLayout>