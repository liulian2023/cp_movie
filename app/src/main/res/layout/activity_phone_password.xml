<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    tools:context=".uuuu.iuymn.mkjnb.activity.safeCenter.PhonePasswordActivity">
    <include layout="@layout/toolbar_layout"/>
    <include layout="@layout/split_big"/>
   <include layout="@layout/split_horizontal"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/手机号    "
            android:textSize="14sp" />

        <EditText
            android:id="@+id/phone_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:hint="@string/请输入您要绑定的手机号码"
            android:inputType="number"
            android:textSize="12sp" />
    </LinearLayout>
    <include layout="@layout/split_horizontal"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/提款密码"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/pay_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/请输入您的提款密码"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:textSize="12sp" />
    </LinearLayout>
    <include layout="@layout/split_horizontal"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/短信验证码"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/phone_code_edv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/请输入手机验证码"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/get_phone_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:text="@string/获取验证码"
            android:textColor="#048CF7"
            android:textSize="12sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/sure_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/game_rule_sure_shape"
        android:text="@string/确定"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>