<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/today_tv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textSize="14sp"
        android:textColor="@drawable/choose_time_text_color"
        android:gravity="center"
        android:text="@string/今日"
        android:background="@drawable/white_normal_ripple"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E7E7"
        />
    <TextView
        android:id="@+id/yestoday_tv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textSize="14sp"
         android:textColor="@drawable/choose_time_text_color"
        android:gravity="center"
        android:text="@string/昨日"
        android:background="@drawable/white_normal_ripple"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E7E7"
        />
    <TextView
        android:id="@+id/week_tv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textSize="14sp"
         android:textColor="@drawable/choose_time_text_color"
        android:gravity="center"
        android:text="@string/近七日"
        android:background="@drawable/white_normal_ripple"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E7E7"
        />

    <TextView
        android:id="@+id/month_tv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textSize="14sp"
         android:textColor="@drawable/choose_time_text_color"
        android:gravity="center"
        android:text="@string/本月"
        android:background="@drawable/white_normal_ripple"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E7E7"
        />
    <TextView
        android:id="@+id/last_month_tv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textSize="14sp"
         android:textColor="@drawable/choose_time_text_color"
        android:gravity="center"
        android:text="@string/上月"
        android:background="@drawable/white_normal_ripple"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E7E7E7"
        />
</LinearLayout>