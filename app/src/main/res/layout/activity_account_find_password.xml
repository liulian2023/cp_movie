<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".uuuu.iuymn.mkjnb.activity.main_tab_activity.AccountFindPasswordActivity">
    <include
        android:id="@+id/forget_password_toolbar"
        layout="@layout/toolbar_layout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
          <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forget_password_toolbar" />


    <EditText
        android:id="@+id/forget_account_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="39dp"
        android:hint="@string/请输入您要找回密码的账号"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:theme="@style/LoginEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forget_password_toolbar" />


    <EditText
        android:id="@+id/pay_password_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="@string/请输入提款密码"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:theme="@style/LoginEditText"
        app:layout_constraintEnd_toEndOf="@+id/forget_account_etv"
        app:layout_constraintStart_toStartOf="@+id/forget_account_etv"
        app:layout_constraintTop_toBottomOf="@+id/forget_account_etv" />

    <EditText
        android:id="@+id/new_password_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="@string/请重新设置位密码字母数字组合"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:theme="@style/LoginEditText"
        app:layout_constraintEnd_toEndOf="@+id/pay_password_etv"
        app:layout_constraintStart_toStartOf="@+id/pay_password_etv"
        app:layout_constraintTop_toBottomOf="@+id/pay_password_etv" />

    <EditText
        android:id="@+id/sure_new_password_etv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="@string/请确认密码"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="@color/default_color"
        android:textColorHint="#999999"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:theme="@style/LoginEditText"
        app:layout_constraintEnd_toEndOf="@+id/new_password_etv"
        app:layout_constraintStart_toStartOf="@+id/new_password_etv"
        app:layout_constraintTop_toBottomOf="@+id/new_password_etv" />

    <Button
        android:id="@+id/find_password_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn_shape"
        android:text="@string/立即修改"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/sure_new_password_etv"
        app:layout_constraintStart_toStartOf="@+id/sure_new_password_etv"
        app:layout_constraintTop_toBottomOf="@+id/sure_new_password_etv" />
</androidx.constraintlayout.widget.ConstraintLayout>