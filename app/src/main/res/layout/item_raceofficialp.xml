<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_item_raceofficialp_tv1"
        >
        <TextView
            android:id="@+id/item_raceofficialp_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/textcolor_head3"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/item_raceofficialp_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"

            android:textColor="@color/textcolor_head3" />

        <LinearLayout
            android:id="@+id/ll_item_raceofficialp_tvparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/item_raceofficialp_tv3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_bkg_retc"
                android:gravity="center"
                android:text="@string/全"
                android:textColor="@color/textgray"
                />
            <TextView
                android:id="@+id/item_raceofficialp_tv4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_bkg_retc"
                android:gravity="center"
                android:text="@string/大"
                android:textColor="@color/textgray"
                />

            <TextView
                android:id="@+id/item_raceofficialp_tv5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_bkg_retc"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/小"
                android:textColor="@color/textgray"
                />
            <TextView
                android:id="@+id/item_raceofficialp_tv6"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_bkg_retc"
                android:gravity="center"
                android:text="@string/单"
                android:textColor="@color/textgray"
                />

            <TextView
                android:id="@+id/item_raceofficialp_tv7"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_bkg_retc"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/双"
                android:textColor="@color/textgray"
                />
            <TextView
                android:id="@+id/item_raceofficialp_tv8"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_bkg_retc"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/清"
                android:textColor="@color/textgray"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="@color/split"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_raceofficialp_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>
