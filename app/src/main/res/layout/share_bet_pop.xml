<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/game_rule_wrap_shape">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/温馨提示"
            android:textColor="@color/alpha_80_black"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/下注成功是否分享该注单"
            android:gravity="center"
            android:textColor="@color/alpha_80_black"
            android:layout_marginBottom="30dp"
            />
        <include layout="@layout/split_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/取消"
                    android:gravity="center"
                    android:id="@+id/share_bet_cancel"
                    android:textColor="@color/alpha_80_black"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/pop_cancel_selector"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                   android:background="@color/split"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/确定"
                    android:textColor="#63a4e8"
                    android:gravity="center"
                    android:id="@+id/share_bet_sure"
                    android:background="@drawable/pop_sure_selector"
                    />
            </LinearLayout>
        <!--</LinearLayout>-->
    </LinearLayout>
</RelativeLayout>