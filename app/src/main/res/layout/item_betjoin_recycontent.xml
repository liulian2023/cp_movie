<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_item_betjoin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15sp"
        android:textColor="#FF2D60"/>

    <TextView
        android:id="@+id/tv_item_betjoin_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_betjoin_name"
        android:textColor="#999999"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/iv_item_betjoin_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/tv_item_betjoin_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_trash"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_item_betjoin_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#FF2D60"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/注"
            android:textSize="13sp"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/tv_item_betjoin_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="13sp"
            android:textColor="#FF2D60"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/倍"
            android:textSize="13sp"
            android:textColor="#999999"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_item_betjoin_type"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:textSize="13sp"
        android:textColor="#FF2D60"
        />

</androidx.constraintlayout.widget.ConstraintLayout>