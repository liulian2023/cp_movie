<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".uuuu.iuymn.mkjnb.activity.caizhong.ssc.SscBetActivity">
    <LinearLayout
        android:id="@+id/bet_wrap_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical">
        <include layout="@layout/bet_actionbar"/>
        <include layout="@layout/no_network_layout"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textSize="13sp"
                        android:id="@+id/now_qishu"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/time_linear"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text="--"
                            android:textSize="18sp"
                            android:textColor="@color/red"
                            android:id="@+id/hour"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text=":"
                            android:textSize="18sp"
                            android:textColor="@color/red"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text="--"
                            android:textSize="18sp"
                            android:textColor="@color/red"
                            android:id="@+id/minutes"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text=":"
                            android:textSize="18sp"
                            android:textColor="@color/red"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text="--"
                            android:textSize="18sp"
                            android:textColor="@color/red"
                            android:id="@+id/seconds"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/is_stop_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:textSize="16sp"
                        android:text="@string/暂停销售"
                        android:textColor="@color/red"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/time_load_linear"
                        android:gravity="center"
                        >

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/loading"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:id="@+id/today_open_result"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:gravity="center"
                            android:textSize="13sp"
                            android:id="@+id/last_qishu"
                            android:layout_marginRight="3dp"
                            />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:contentDescription="TODO"
                            android:src="@mipmap/icon_arrow_down"
                            android:layout_gravity="center"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:id="@+id/ssc_open_resule_linear"
                        >
                        <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:text="--"
                            android:gravity="center"
                            android:id="@+id/num_one"
                            android:textColor="@color/white"
                            />
                        <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:text="--"
                            android:gravity="center"
                            android:id="@+id/num_two"
                            android:textColor="@color/white"
                            android:layout_marginLeft="@dimen/bet_ball_margin"
                            />
                        <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:text="--"
                            android:gravity="center"
                            android:id="@+id/num_three"
                            android:textColor="@color/white"
                            android:layout_marginLeft="@dimen/bet_ball_margin"
                            />
                        <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:text="--"
                            android:gravity="center"
                            android:id="@+id/num_four"
                            android:textColor="@color/white"
                            android:layout_marginLeft="@dimen/bet_ball_margin"
                            />
                        <com.uyt.ying.yuan.uuuu.iuymn.mkjnb.myView.MyCornerTextView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:text="--"
                            android:gravity="center"
                            android:id="@+id/num_five"
                            android:textColor="@color/white"
                            android:layout_marginLeft="@dimen/bet_ball_margin"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/fail_refresh_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="@string/点击刷新"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/default_color"
                android:visibility="gone"
                />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/count_down_fail_loading_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/loading"
                android:layout_gravity="center"
                android:visibility="gone"
                />
        </FrameLayout>

        <include layout="@layout/split_horizontal"/>
        <include layout="@layout/loading_layout"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ssc_normal_recycle_linear"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bet_recycle_wrap_shape">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/happy_bet_recycle"
                    android:layout_margin="5dp"
                    ></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ssc_normal_bottom_linear"
            android:orientation="horizontal"

            android:background="@color/black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/已选中"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                />
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/yellow"
                android:text="0"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:id="@+id/bet_num"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/注"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/amount_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bet_edittext_shape"
                    android:hint="@string/请输入金额"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:maxWidth="100dp"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp" android:baselineAligned="false"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bet_bet_button_shape"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/下注"
                        android:textColor="@color/white"
                        android:id="@+id/bet_button"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bet_edittext_shape"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/机选"
                        android:id="@+id/random_button"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ssc_gf_recycle_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bet_shuoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:lineSpacingExtra="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/happy_bet_gf_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/gf_ssc_amount_linear">
            <include layout="@layout/split_horizontal"/>
            <include layout="@layout/split_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="20sp"
                        android:background="@drawable/ssc_bet_bottom_jian_shape"
                        android:id="@+id/jian"
                        />
                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:text="1"
                        android:gravity="center"
                        android:background="@drawable/ssc_bet_bottom_amount_shape"
                        android:id="@+id/ssc_official_amount_edit"
                        />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="20sp"
                        android:background="@drawable/ssc_bet_bottom_jian_shape"
                        android:id="@+id/jia"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/倍"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/max_amount"
                    />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <RadioButton
                        android:id="@+id/yuan"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:background="@drawable/official_amount_linear_shape"
                        android:textColor="@color/official_amount_linear_color"
                        android:text="@string/元"
                        />

                    <RadioButton
                        android:id="@+id/jiao"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:background="@drawable/official_amount_linear_shape_right"
                        android:textColor="@color/official_amount_linear_color"
                        android:text="@string/角" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/ssc_gf_bottom_linear"
            android:background="@color/black">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/机选"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:background="#FF222222"
                android:id="@+id/official_jixuan_tv"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#222222"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/共"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFA319"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/bet_num_gf"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/注"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFA319"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/amount_num_gf"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/元"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/确定投注"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:background="#e54042"
                android:id="@+id/sure_bet_gf"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/stop_textview"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/已封盘"
        android:textColor="@color/white"
        android:background="@color/black_50"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/bet_wrap_linear"
        app:layout_constraintRight_toRightOf="@+id/bet_wrap_linear"
        app:layout_constraintBottom_toBottomOf="@+id/bet_wrap_linear"
        />
</androidx.constraintlayout.widget.ConstraintLayout>